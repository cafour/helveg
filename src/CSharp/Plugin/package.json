{
  "name": "helveg-csharp",
  "description": "A C# plugin for Helveg, a software visualization tool.",
  "private": true,
  "type": "module",
  "scripts": {
    "raw": "tsc --noEmit && ts-node --project ./eng/tsconfig.json ./eng/build.ts",
    "build:Debug": "npm run raw -- --debug",
    "build:Release": "npm run raw -- --release",
    "build": "npm run build:Debug"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/node": "^18.15.11",
    "@types/yargs": "^17.0.24",
    "esbuild": "^0.17.17",
    "esbuild-plugin-globals": "^0.2.0",
    "esbuild-svelte": "^0.7.3",
    "svelte": "^3.58.0",
    "svelte-preprocess": "^5.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "yargs": "^17.7.1"
  }
}
