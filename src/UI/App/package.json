{
  "name": "helveg",
  "type": "module",
  "scripts": {
    "raw": "ts-node --esm --project ./tsconfig.node.json ./build.ts",
    "build:Debug": "npm run raw -- --debug",
    "build:Release": "npm run raw -- --release",
    "build": "npm run build:Debug",
    "watch": "npm run raw -- --watch",
    "serve": "concurrently \"npm run watch\" \"browser-sync start -w -s ../obj/esbuild\""
  },
  "devDependencies": {
    "@tsconfig/svelte": "^3.0.0",
    "@types/jsdom": "^21.1.0",
    "@types/yargs": "^17.0.22",
    "browser-sync": "^2.28.3",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.11",
    "esbuild-plugin-copy": "^2.1.0",
    "esbuild-svelte": "^0.7.3",
    "jsdom": "^21.1.1",
    "svelte": "^3.56.0",
    "svelte-check": "^3.1.2",
    "svelte-preprocess": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "yargs": "^17.7.1"
  }
}
